(* comments? *)

zeus-program = (magic | code | <md>) * 

code =  <"`" "`" "`"> code-type code-block+ <"`" "`" "`"> 
	 | <"`" "`" "`"> "\n" code-block+ <"`" "`" "`">
	 ;

<magic> = <"`@"> magic-word <"@`"> ;

magic-word = #'[^@]+' ; 

md = md-glob | in-line-code ;

<text> = #'([A-Za-z ]|[0-9])+';

md-glob = #'[^`@]+' ;

<in-line-code> = !("`" "`" "`") ("`"|"``");

newline = #"\n+"; 

code-type = "clojure" | "text" ;

<code-block> = code-glob;

<code-glob> = #'[^`]+' | in-line-code ;

