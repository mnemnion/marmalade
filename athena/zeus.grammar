(* comments? *)

zeus-program = (magic | code | <markdown>) * 

code =  <"`" "`" "`"> code-type code-block+ <"`" "`" "`"> 
	 | <"`" "`" "`"> "\n" code-block+ <"`" "`" "`">
	 ;

code-type = "clojure" | "text" ;

<code-block> = code-glob;

<code-glob> = #'[^`]+' | in-line-code ;

<in-line-code> = !("`" "`" "`") ("`"|"``");

<magic> = <"`@"> magic-word <"@`"> ;

magic-word = #'[^@]+' ; 

markdown = markdown-glob | in-line-code ;

markdown-glob = #'[^`@]+' ;
