(* A Mini Grammar for Literate Clojure Macros in Marmalade *)

code-body = code-line + ;

<code-line> = literal-code + | macro  (* (!blank-line newline)* ; *) ;

literal-code = #'[^\n#|(]+' | punc | newline ;

<newline> = '\n' ;
 
macro = <mac-start> mac-name <mac-end> ;

<mac-start> = '#|(' ;

<mac-name> = !mac-end #'[^)]+' ;

<mac-end> = ')|#' ;

<punc> = !mac-start #'[#|(]+' ;

(* <blank-line> = '\n' sp #'[\n]+' ; *)

<sp> = #'[ \t]*' ;

<ws> = #'[\s]+';

